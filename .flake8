[flake8]
max-line-length = 88
exclude = .git,__pycache__,build,dist
extend-ignore = E203, W503
filename = *.py
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py: F401
    tests/*: E501
# Map both hyphenated and underscore paths
import-paths = src/defect_detection,src/defect-detection
# Treat both paths as the same module
module-naming-style = any
max-complexity = 10
statistics = True
count = True
